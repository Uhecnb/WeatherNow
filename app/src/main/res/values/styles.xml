<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="TitleActionBar" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorTitleActionBar</item>
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorActionBar</item>
        <item name="android:titleTextStyle">@style/TitleActionBar</item>
        <item name="android:icon">@drawable/icon_weather</item>
    </style>

</resources>
